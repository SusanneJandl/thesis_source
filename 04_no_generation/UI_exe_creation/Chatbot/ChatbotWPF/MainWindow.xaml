<Window x:Name="chatbot_window" x:Class="ChatbotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatbot" Height="520" Width="450" Background="#f7f7f7"
        WindowStartupLocation="Manual">
    <Grid>
        <!-- Header Section -->
        <TextBlock x:Name="header_chatbot" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,10,0,0" Text="Chatbot" Foreground="#FFC00D0D" FontFamily="Arial"/>

        <!-- Language Selection -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="0,45,0,0">
            <TextBlock x:Name="txt_language" Text="Language: " 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0" 
                       FontWeight="SemiBold" FontFamily="Arial"/>
            <RadioButton x:Name="rb_english"
                         Content="English" 
                         Margin="0,0,10,0"
                         Checked="OnSwitch" FontFamily="Arial"/>
            <RadioButton x:Name="rb_german" 
                         Content="German" 
                         IsChecked="True"
                         Checked="OnSwitch" FontFamily="Arial"/>
        </StackPanel>

        <!-- Chat History Section -->
        <ListBox x:Name="ChatHistoryListBox"
                 ItemsSource="{Binding ChatHistory}" 
                 Margin="10,100,10,150"
                 Background="White"
                 BorderBrush="#cccccc"
                 BorderThickness="1"
                 Padding="5"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- User Input Section with Placeholder -->
        <Grid Margin="10,0,90,50" VerticalAlignment="Bottom" Height="80">
            <TextBox x:Name="UserInput" 
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     HorizontalScrollBarVisibility="Disabled" 
                     VerticalScrollBarVisibility="Auto"
                     BorderBrush="#cccccc"
                     BorderThickness="1"
                     Background="White"
                     Padding="5"
                     TextChanged="UserInput_TextChanged" Margin="0,0,10,-30" FontFamily="Arial"/>
            <TextBlock x:Name="placeholder_textblock" 
                       Text="" 
                       Foreground="Gray"
                       VerticalAlignment="Center" 
                       Margin="5,0,0,0"
                       IsHitTestVisible="False"
                       FontStyle="Italic"
                       Visibility="Visible" FontFamily="Arial"/>
        </Grid>

        <!-- Send Button -->
        <Button x:Name="btn_send" Content="Send" 
                VerticalAlignment="Bottom" 
                Height="40"
                Width="80" Margin="0,0,10,50" 
                HorizontalAlignment="Right"
                Click="SendButton_Click"
                Background="#c00d0d"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="White"
                BorderThickness="1" FontFamily="Arial">
            <Button.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
            </Button.Effect>
        </Button>
        <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" Height="31" Margin="54,64,0,0" Width="337">
            <TextBlock x:Name="txt_Accuracy" Text="Accuracy:" 
            FontWeight="SemiBold" FontFamily="Arial" Margin="0,5,0,0"/>
            <Slider x:Name="Accuracy" Height="22" Width="248" Minimum="1" SmallChange="1" Value="3" ValueChanged="Accuracy_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>
